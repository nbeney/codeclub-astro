---
import { pagesReady } from '@scripts/pages';

const { active } = Astro.props;

const activePage = pagesReady.find(page => 
    page.name.toLowerCase().startsWith(active?.toLowerCase())
) || pagesReady[0];
---

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href={import.meta.env.BASE_URL + "/"}>Code Club</a>
            <div class="dropdown">
                <button 
                    class="btn btn-primary dropdown-toggle" 
                    type="button" 
                    id="dropdownMenuButton" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false"
                >
                    {activePage.name}
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    {pagesReady.map(({name, route}) => (
                        <li>
                            <a 
                                class:list={[
                                    "dropdown-item",
                                    { active: name === activePage.name }
                                ]} 
                                href={import.meta.env.BASE_URL + route}
                            >
                                {name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    .dropdown-item.active {
        background-color: var(--bs-primary);
        color: white;
    }
    
    .dropdown-toggle::after {
        margin-left: 0.5em;
    }
</style>